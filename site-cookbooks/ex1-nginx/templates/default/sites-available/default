server {
    listen   80;
    server_name 127.0.0.1;

    location / {
        root   /var/www/nginx-default;
        index  index.html index.htm;
    }
}

server {
  server_name <%= node['fqdn'] %>;
  proxy_set_header Host $http_host;
  location / {
    proxy_pass http://127.0.0.1:9200;
    client_max_body_size 8M;
  }
}

